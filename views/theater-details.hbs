<main>
    <div class="container">

        <section class="details">
            <h1>{{theaterTitle}}</h1>
            <div>
                <img src="{{imageUrl}}" />
            </div>
        </section>

        <section class="details">
            <h3>Theater Description</h3>
            <p>{{description}}</p>
            <div class="buttons">
                {{#if userIsCreator}}
                <a class="btn delete" href="/delete/{{id}}">Delete</a>
                <a class="btn edit" href="/edit/{{id}}">Edit</a>
                {{else}}
                    {{#if playIsLiked}}
                    <span class="liked">You have already liked this play!</span>
                    {{else}}
                    <a class="btn like" href="/like/{{id}}">Like</a>
                    {{/if}}
                {{/if}}
            </div>
        </section>
    </div>
</main>